{
  "name": "dotnet-dnceng",
  "version": "0.1.0",
  "description": "Skills for .NET engineering infrastructure: CI/CD analysis, VMR codeflow, and build pipeline workflows",
  "author": {
    "name": "lewing"
  },
  "license": "MIT",
  "keywords": [
    "dotnet",
    "dnceng",
    "ci",
    "vmr",
    "codeflow",
    "helix",
    "azure-devops"
  ],
  "skills": [
    "skills/ci-analysis",
    "skills/flow-analysis",
    "skills/flow-tracing"
  ],
  "mcpServers": {
    "ado-dnceng-public": {
      "command": "npx",
      "args": [
        "-y",
        "@azure-devops/mcp",
        "dnceng-public"
      ],
      "env": {
        "AZURE_DEVOPS_AUTH_METHOD": "azure-cli"
      }
    },
    "ado-dnceng": {
      "command": "npx",
      "args": [
        "-y",
        "@azure-devops/mcp",
        "dnceng"
      ],
      "env": {
        "AZURE_DEVOPS_AUTH_METHOD": "azure-cli"
      }
    },
    "hlx": {
      "command": "dotnet",
      "args": [
        "dnx",
        "--yes",
        "lewing.helix.mcp"
      ]
    },
    "maestro": {
      "command": "dotnet",
      "args": [
        "dnx",
        "--yes",
        "lewing.maestro.mcp"
      ]
    },
    "mcp-binlog-tool": {
      "command": "dotnet",
      "args": [
        "dnx",
        "--yes",
        "baronfel.binlog.mcp"
      ]
    },
    "mihubot": {
      "type": "http",
      "url": "https://mihubot.xyz/mcp"
    }
  }
}